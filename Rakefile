require 'rubygems'
require 'rake'

begin
  require 'jeweler'
  Jeweler::Tasks.new do |gem|
    gem.name = "jersey-client"

    gem.summary = %Q{A JavaGem version of jersey-client - packaged by JavaGems (http://www.javagems.org) - original by Sun Microsystems, Inc (http://www.sun.com/)}



    gem.description = "Jersey is the open source (under dual CDDL+GPL license) JAX-RS (JSR 311)\n        production quality Reference Implementation for building\n        RESTful Web services."    

    gem.homepage = "http://www.javagems.org/"

    gem.authors = ["pending/unknown"]

    gem.email = "autobuild@javagems.org"
    gem.version = "1.0.3"

  

    gem.add_development_dependency "junit", "~>3.8.1"

    gem.add_development_dependency "http", "~>20070405"

    gem.add_development_dependency "jersey-core", "~>1.0.3"

  end
rescue LoadError
  puts "Jeweler (or a dependency) not available. Install it with: sudo gem install jeweler"
end

task :default => :build
